<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#D1E6FB"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/mark_logo"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0077CC"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:text="Customers, As per RBI guidelines CKYC identification needs to be updated."
                android:textColor="#FFFF00"
                android:textSize="18sp"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:background="#D1E6FB"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verify Account"
                android:textColor="#002945"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:padding="5dp" />


            <EditText
                android:id="@+id/adhar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/input_background"
                android:hint="Aadhaar Number"
                android:inputType="number"
                android:padding="12dp"
                android:maxLength="12"
                android:textColor="#000000"
                android:textColorHint="#BE7E7B7B" />
            <EditText
                android:id="@+id/pan"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/input_background"
                android:hint="PAN Card Number"
                android:inputType="text"
                android:padding="12dp"
                android:maxLength="10"
                android:textColor="#000000"
                android:textColorHint="#BE7E7B7B" />
            <EditText
                android:id="@+id/ac"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/input_background"
                android:hint="Account Number"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#BE7E7B7B" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#D1E6FB"
                >

                <ImageView
                    android:id="@+id/submitForm"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:src="@drawable/submit"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/mark_logo"
                    />

                <ImageView
                    android:id="@+id/resetForm"
                    android:layout_marginTop="2dp"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:src="@drawable/reset"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/mark_logo"
                    android:layout_gravity="center"
                    />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</ScrollView>
